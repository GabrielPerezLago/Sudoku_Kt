<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fondo">
    <LinearLayout
        android:id="@+id/tituloLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        android:padding="20dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/nombreLbl"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Prueba"
                android:textColor="#005EF5"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:fontFamily="@font/faster_one"
                android:layout_margin="20dp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.1"/>
            <TextView
                android:id="@+id/timeLbl"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Tiempo"
                android:textColor="#005EF5"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:fontFamily="@font/faster_one"
                android:layout_margin="20dp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.95"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tableroLayout"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tituloLayout">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tableroLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">
        <Button
            android:id="@+id/comprobarBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comprobar"
            android:background="@android:color/transparent"
            android:textColor="#10FE18"
            android:layout_gravity="center"
            android:fontFamily="@font/faster_one"
            android:layout_marginHorizontal="20dp"/>
        <Button
            android:id="@+id/pistaBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pista"
            android:background="@android:color/transparent"
            android:textColor="#10FE18"
            android:layout_gravity="center"
            android:fontFamily="@font/faster_one"
            android:layout_marginHorizontal="20dp"/>
        <Button
            android:id="@+id/retreatBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rendirse"
            android:background="@android:color/transparent"
            android:textColor="#FF0000"
            android:layout_gravity="center"
            android:fontFamily="@font/faster_one"
            android:layout_marginHorizontal="20dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>